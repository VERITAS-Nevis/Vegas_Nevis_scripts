if [ "$#" -gt 0 ]; then
  time=$1
  return
else
  time=3
  return
fi

while true; do
  echo ....
  echo .... Output from condor_q
  date
  echo ....
  condor_q $USER 
  #echo ....
  #echo .... Output from condor_q -globus
  #echo ....
  #condor_q -globus dribeiro
  #echo ....
  #echo .... Output from condor_q -dag
  #echo ....
  #condor_q -dag dribeiro
  sleep $time
done
